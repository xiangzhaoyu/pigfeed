<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="3dp"
    android:background="@color/linearlayout_background"
    android:gravity="center"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:orientation="horizontal" >

    <TextView
        style="@style/table_list_title_textview"
        android:id="@+id/formula_recommand_list_name" />    
    <TextView
        style="@style/table_list_title_textview"
        android:id="@+id/formula_recommand_list_num" />
    <TextView
        style="@style/table_list_title_textview"
        android:id="@+id/formula_recommand_list_unit" />
    <TextView
        style="@style/table_list_title_textview"
        android:id="@+id/formula_recommand_list_value" />
</LinearLayout>