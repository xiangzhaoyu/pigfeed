<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_day_switcher"
    android:layout_width="match_parent"
    android:layout_height="44dp" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/common_list_category_bg" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <RadioGroup
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="4dp" >

                <RadioButton
                    android:id="@+id/view_day_rb_workday"
                    style="@style/week_left"
                    android:text="@string/time_work" />

                <RadioButton
                    android:id="@+id/view_day_rb_weekendday"
                    style="@style/week_right"
                    android:text="@string/time_weekend"
                    android:textColor="@drawable/week_text_color" />
            </RadioGroup>
        </LinearLayout>

        <ImageView
            android:id="@+id/view_day_bt_advance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="8dp"
            android:background="@drawable/frame_icon_feed_transfer_h"
            android:clickable="true" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/view_day_week_1"
            style="@style/week_left"
            android:text="一" />

        <CheckBox
            android:id="@+id/view_day_week_2"
            style="@style/week_middle"
            android:text="二" />

        <CheckBox
            android:id="@+id/view_day_week_3"
            style="@style/week_middle"
            android:text="三" />

        <CheckBox
            android:id="@+id/view_day_week_4"
            style="@style/week_middle"
            android:text="四" />

        <CheckBox
            android:id="@+id/view_day_week_5"
            style="@style/week_middle"
            android:text="五" />

        <CheckBox
            android:id="@+id/view_day_week_6"
            style="@style/week_middle"
            android:text="六" />

        <CheckBox
            android:id="@+id/view_day_week_7"
            style="@style/week_right"
            android:text="日" />
        
                <ImageView
            android:id="@+id/view_day_bt_advance1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="4dp"
                android:layout_marginLeft="3dp"
            android:background="@drawable/frame_icon_feed_transfer_h"
            android:clickable="true" />
                
                
    </LinearLayout>

</ViewSwitcher>